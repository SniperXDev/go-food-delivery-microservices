{
  "serviceName": "order_service",
  "context": {
    "timeout": 20
  },
  "grpc": {
    "port": ":6005",
    "host": "localhost",
    "development": true
  },
  "http": {
    "port": ":8000",
    "development": true,
    "timeout": 30,
    "basePath": "/api/v1",
    "host": "http://localhost",
    "ordersPath": "orders",
    "debugHeaders": true,
    "httpClientDebug": true,
    "debugErrorsResponse": true,
    "ignoreLogUrls": [
      "metrics"
    ]
  },
  "logger": {
    "level": "debug",
    "logType": 0
  },
  "postgres": {
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "password": "postgres",
    "dbName": "orders_service",
    "sslMode": false,
    "migrations": {
      "migrationsDir": "migrations",
      "skipMigration": true
    }
  },
  "gormPostgres": {
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "password": "postgres",
    "dbName": "orders_service",
    "sslMode": false
  },
  "mongo": {
    "host": "localhost",
    "port": 27017,
    "user": "admin",
    "password": "admin",
    "database": "orders_service",
    "useAuth": true
  },
  "mongoCollections": {
    "orders": "orders"
  },
  "rabbitmq": {
    "rabbitMqHostOptions": {
      "userName": "guest",
      "password": "guest",
      "hostName": "localhost",
      "port": 5672
    }
  },
  "otel": {
    "enable": true,
    "serviceName": "orders-service",
    "instrumentationName": "github.com/mehdihadeli/go-ecommerce-microservices/internal/services/orders",
    "id": 3,
    "alwaysOnSampler": true,
    "jaegerExporterConfig": {
      "agentHost": "localhost",
      "agentPort": "6831"
    },
    "zipkinExporterConfig": {
      "url": "http://localhost:9411/api/v2/spans"
    }
  },
  "otelMetrics": {
    "port": ":2222",
    "metricsRoutePath": "/metrics",
    "name": "orders-service"
  },
  "eventStoreConfig": {
    "connectionString": "esdb://localhost:2113?tls=false"
  },
  "subscriptions": {
    "orderSubscription": {
      "subscriptionId": "orders-subscription",
      "prefix": ["order-"]
    }
  }
}
