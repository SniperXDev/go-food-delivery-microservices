    "paths": {
        "/products": {
            "post": {
                "description": "Create new product item",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Products"
                ],
                "summary": "Create product",
                "parameters": [
                    {
                        "description": "Product data",
                        "name": "CreateProductRequestDto",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.CreateProductRequestDto"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/dto.CreateProductResponseDto"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.CreateProductRequestDto": {
            "type": "object",
            "required": [
                "description",
                "name",
                "price"
            ],
            "properties": {
                "description": {
                    "type": "string",
                    "maxLength": 5000,
                    "minLength": 0
                },
                "name": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 0
                },
                "price": {
                    "type": "number",
                    "minimum": 0
                }
            }
        },
        "dto.CreateProductResponseDto": {
            "type": "object",
            "properties": {
                "productId": {
                    "type": "string"
                }
            }
        }
    }
}